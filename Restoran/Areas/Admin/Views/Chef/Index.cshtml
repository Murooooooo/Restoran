@model List<Chef>

<a asp-action="Create" class="btn btn-success" >Create</a>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
            <th scope="col">FullName</th>
            <th scope="col">Position</th>
            <th scope="col">PhotoUrl</th>
    </tr>
  </thead>
  <tbody>
        @foreach (var chef in Model)
        {
            <tr>
                <th scope="row">@chef.Id</th>
                <td>@chef.FullName</td>
                <td>@chef.Position</td>
                <td><img src="@chef.PhotoUrl" alt="Chef Photo" style="width: 50px; height: 50px;" /></td>

                <td>
                    <a asp-action="Update" asp-route-id="@chef.Id" class="btn btn-warning" >Update</a>
                    <a asp-action="Delete" asp-route-id="@chef.Id" class="btn btn-danger" >Delete</a>
                </td>
            </tr>
        }
   
  </tbody>
</table>