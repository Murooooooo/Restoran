@model Chef
@{
    ViewData["Title"] = "Create Chef";
}

<form method="post" enctype="multipart/form-data"> 
    <div class="form-group">
        <label asp-for="FullName">FullName</label>
        <input asp-for="FullName" type="text" class="form-control" placeholder="Enter FullName">
        <span asp-validation-for="FullName" ></span>
    </div>
    <div class="form-group">
        <label asp-for="Position">Position</label>
        <input asp-for="Position" type="text" class="form-control" placeholder="Enter Position">
        <span asp-validation-for="Position" ></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl">Photo</label>
        <input name="file" asp-for="PhotoUrl" type="file" class="form-control" placeholder="Enter Photo">
        <span asp-validation-for="PhotoUrl"></span>
    </div>
    <div asp-validation-summary="All" ></div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>